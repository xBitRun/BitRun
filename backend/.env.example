# BITRUN Backend Configuration
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/bitrun

# Redis
REDIS_URL=redis://localhost:6379/0

# Security - Data Encryption
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
# If not set, a random key will be generated (data won't persist across restarts)
DATA_ENCRYPTION_KEY=

# Security - JWT
# If not set, a random secret will be generated (sessions won't persist across restarts)
JWT_SECRET=

# Security - Transport Encryption
# Enable RSA+AES encryption for sensitive data in transit
TRANSPORT_ENCRYPTION_ENABLED=false

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Worker Settings
# Set to true to enable automatic strategy execution on startup
WORKER_ENABLED=true

# Notification Settings
# Telegram (get bot token from @BotFather, chat_id from @userinfobot)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord (create webhook in channel settings)
DISCORD_WEBHOOK_URL=

# Email (Resend - https://resend.com/)
# Get API key from Resend dashboard
# Recipient email is read from user database, not configured here
RESEND_API_KEY=
RESEND_FROM=noreply@yourdomain.com  # Must be a verified domain in Resend

# Proxy (for geo-restricted exchange APIs like Bybit, OKX)
# If running in Docker with a local proxy (Surge/Clash), use host.docker.internal
# Example: http://host.docker.internal:6152 (Surge) or http://host.docker.internal:7890 (Clash)
PROXY_URL=

# Sentry APM (https://sentry.io/)
# Error tracking and performance monitoring
SENTRY_DSN=

# ===========================================
# Brand Configuration (for backend notifications)
# ===========================================
# Full branding (logo, theme, links) is configured in frontend .env
# These are only used for backend notifications (email, telegram, etc.)

BRAND_NAME=BITRUN
BRAND_TAGLINE=AI-Powered Trading Agent
BRAND_DESCRIPTION=Prompt-driven automated trading with AI decision making
