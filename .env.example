# BITRUN Environment Configuration
# Copy this file to .env and update values as needed

# ==================== Required Secrets ====================
# Generate secure random values for production
# Example: openssl rand -base64 32

POSTGRES_PASSWORD=your-secure-password-here
JWT_SECRET=your-jwt-secret-here
DATA_ENCRYPTION_KEY=your-encryption-key-here
REDIS_PASSWORD=your-redis-password-here

# ==================== Database ====================
POSTGRES_DB=bitrun
POSTGRES_USER=bitrun

# ==================== Ports ====================
# Change these if you have port conflicts
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ==================== URLs ====================
# Frontend domain (where users access the web app)
FRONTEND_DOMAIN=app.qemind.xyz
# Backend API domain (where frontend sends API requests)
BACKEND_DOMAIN=api.qemind.xyz

# CORS settings (frontend domain for backend to accept)
CORS_ORIGINS=https://app.qemind.xyz

# API URLs (used by frontend to connect to backend)
NEXT_PUBLIC_API_URL=https://api.qemind.xyz/api/v1
NEXT_PUBLIC_WS_URL=wss://api.qemind.xyz/api/v1/ws

# For local development:
# FRONTEND_DOMAIN=localhost:3000
# BACKEND_DOMAIN=localhost:8000
# CORS_ORIGINS=http://localhost:3000
# NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
# NEXT_PUBLIC_WS_URL=ws://localhost:8000/api/v1/ws

# ==================== Brand Identity (Optional) ====================
# Customize the application branding - defaults will be used if not set
# NEXT_PUBLIC_BRAND_NAME=BitRun
# NEXT_PUBLIC_BRAND_SHORT_NAME=BR
# NEXT_PUBLIC_BRAND_TAGLINE=AI-Powered Crypto Trading
# NEXT_PUBLIC_BRAND_DESCRIPTION=Your AI trading assistant
# NEXT_PUBLIC_BRAND_LOGO_DEFAULT=/logo.svg
# NEXT_PUBLIC_BRAND_LOGO_COMPACT=/logo-compact.svg
# NEXT_PUBLIC_BRAND_LOGO_ICON=/favicon.ico
# NEXT_PUBLIC_BRAND_FAVICON=/favicon.ico
# NEXT_PUBLIC_BRAND_THEME_PRESET=default
# NEXT_PUBLIC_BRAND_COPYRIGHT_HOLDER=BitRun
# NEXT_PUBLIC_BRAND_TERMS_URL=
# NEXT_PUBLIC_BRAND_PRIVACY_URL=
# NEXT_PUBLIC_BRAND_HOMEPAGE_URL=
# NEXT_PUBLIC_BRAND_DOCS_URL=
# NEXT_PUBLIC_BRAND_SUPPORT_URL=

# ==================== Worker Configuration ====================
WORKER_ENABLED=true

# ==================== Notifications (Optional) ====================
# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord notifications
DISCORD_WEBHOOK_URL=

# ==================== System ====================
TZ=Asia/Shanghai
ENVIRONMENT=production
DEBUG=false

# ==================== Redis ====================
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ==================== Database ====================
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
